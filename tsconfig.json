{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "typeRoots": ["/src/types/", "./node_modules/@types"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
